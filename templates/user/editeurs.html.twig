{% block body %}
    <div class="titre_page">
		<h2>Les éditeurs</h2>
	</div>
    <div class="liste_user">
        {% for item in items %}
            <div>
                    <aside class="user_action">
                        <a href="{{ path('edit_user', {'id': item.id }) }}"><span class="fa fa-edit"></span></a>
                        <a href="{{ path('supprimer_client_de', {'user_id': item.id }) }}"><span class="fa fa-trash-o"></span></a>
                    </aside>
                    <a href="{{ path('liste_client_de_user', {'user_id': item.id }) }}">
                        <div><span class="fa fa-user"></span></div>
                        <ul>
                            <li>{{ item.username }}</li>
                            <li>{{ item.nom }} <i>{% if item.prenom is defined and item.prenom is not null %}
                                    {{ item.prenom }}
                                {% endif %}</i></li>
                            <li><i><u>CIN:</u> </i>{{ item.cin }}</li>
                            <li><i><u>Contact:</u></i> {{ item.phone }}</li>
                            <li><i><u>Adresse:</u></i> {{ item.adresse }}</li>
                            <li><i><u>Rôle:</u> </i>
                                {% if item.roles[0] == "ROLE_ADMIN" %}
                                    Administrateur
                                {% else %}
                                    Editeurs
                                {% endif %}
                            </li>
                        </ul>
                    </a>
                </div>
        {% endfor %}
    </div>
