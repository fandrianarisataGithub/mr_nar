{% extends "base.html.twig" %}
{% block title %}
    Importation 
{% endblock %}
{% block body %}
    {# file 2 #}
    <div class="container">
        <div class="row form_add_file">
            {{ form_start(form_import2, {'action' : path('fichier2'), 'attr' : {'class' : 'import'}}) }}
                <div
                    class="form-group">
                    {{ form_row(form_import2.fichier, { 'label' : "importer votre fichier",'attr' :{
                                        'id' : 'fichier2'
                                    } }) }}
                </div>

                <div class="error"><p>Erreur bli bla</p></div>
                <div class="form-group">
                    <button class="btn btn-default" type="submit">
                        <span>Importer</span>
                    </button>
                </div>
            {{ form_end(form_import2) }}
        </div>
        <div class="tableau tab_historique">
            <table class="display" id="tableau2" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            <span>NUM PENS</span>
                        </th>
                        <th>
                            <span>NOM</span>
                        </th>
                        <th>
                            <span>RUB</span>
                        </th>
                        <th>
                            <span>MONTANT</span>
                        </th>
                        <th>
                            <span>DATE DEBUT</span>
                        </th>
                        <th>
                            <span>DATE FIN</span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% if d_aff2 is defined %}
                        {% for item in d_aff2 %}
                            <tr>
                                <td>
                                    <span>{{ item.getNumPens() | raw }}</span>
                                </td>
                                <td>
                                    <span>{{ item.getNom() | raw }}</span>
                                </td>
                                <td>
                                    <span>{{ item.getRub() | raw }}</span>
                                </td>
                                <td>
                                    <span>{{ item.getMontant() | raw }}</span>
                                </td>
                                <td>
                                    <span>{{ item.getDateDebut() | raw }}</span>
                                </td>
                                <td>
                                    <span>{{ item.getDateFin() | raw }}</span>
                                </td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
